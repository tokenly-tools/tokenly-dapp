{
  "name": "tokenly-dapp",
  "version": "1.0.0",
  "description": "Your token utilities in one place",
  "workspaces": [
    "app",
    "contracts"
  ],
  "scripts": {
    "test": "pnpm --filter app test && pnpm --filter contracts test",
    "test:contracts": "pnpm --filter contracts test",
    "compile:contracts": "pnpm --filter contracts compile",
    "lint:contracts": "pnpm --filter contracts lint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "husky install"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.13.1",
  "devDependencies": {
    "@nuxt/eslint-config": "^1.5.2",
    "eslint": "^9.31.0",
    "eslint-plugin-vue": "^9.28.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "prettier-plugin-solidity": "^1.4.3"
  },
  "lint-staged": {
    "*.{js,ts,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yaml,yml}": [
      "prettier --write"
    ],
    "contracts/**/*.sol": [
      "pnpm --filter contracts lint:fix",
      "pnpm --filter contracts format"
    ]
  }
}
