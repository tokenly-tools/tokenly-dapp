{
  "name": "tokenly-dapp",
  "version": "1.0.0",
  "description": "Your token utilities in one place",
  "workspaces": [
    "app",
    "contracts"
  ],
  "scripts": {
    "test": "pnpm --filter app test && pnpm --filter contracts test",
    "test:contracts": "pnpm --filter contracts test",
    "compile:contracts": "pnpm --filter contracts compile",
    "lint:contracts": "pnpm --filter contracts lint",
    "format": "pnpm --filter app exec prettier --write . && pnpm --filter contracts exec prettier --write .",
    "format:check": "pnpm --filter app exec prettier --check . && pnpm --filter contracts exec prettier --check .",
    "lint": "pnpm --filter app exec eslint .",
    "lint:fix": "pnpm --filter app exec eslint . --fix",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.13.1",
  "devDependencies": {
    "@nuxt/eslint-config": "^1.5.2",
    "eslint": "^9.31.0",
    "eslint-plugin-vue": "^9.28.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "prettier-plugin-solidity": "^1.4.3",
    "prettier-plugin-tailwindcss": "^0.6.14"
  },
  "lint-staged": {
    "app/**/*.{js,ts,vue}": [
      "pnpm --filter app exec eslint --fix",
      "pnpm --filter app exec prettier --write"
    ],
    "contracts/**/*.{js,ts}": [
      "pnpm --filter contracts exec eslint --fix",
      "pnpm --filter contracts exec prettier --write"
    ],
    "*.{json,md,yaml,yml}": [
      "prettier --write"
    ],
    "contracts/**/*.sol": [
      "pnpm --filter contracts lint:fix",
      "pnpm --filter contracts format"
    ]
  }
}
